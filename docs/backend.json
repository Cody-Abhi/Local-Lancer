
{
  "entities": {
    "User": {
      "title": "User Profile",
      "description": "Store profile information for both freelancers and clients.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phoneNumber": { "type": "string" },
        "name": { "type": "string" },
        "role": { "type": "string", "enum": ["freelancer", "client", "admin"] },
        "location": {
          "type": "object",
          "properties": {
            "lat": { "type": "number" },
            "lng": { "type": "number" },
            "address": { "type": "string" },
            "pincode": { "type": "string" }
          }
        },
        "skills": { "type": "array", "items": { "type": "string" } },
        "bio": { "type": "string" },
        "businessName": { "type": "string" },
        "verified": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "role", "name"]
    },
    "UserStats": {
      "title": "User Stats",
      "description": "Real-time financial and activity metrics for a user.",
      "type": "object",
      "properties": {
        "totalEarnings": { "type": "number" },
        "escrowBalance": { "type": "number" },
        "activeProjectsCount": { "type": "number" },
        "profileViews": { "type": "number" }
      }
    },
    "Milestone": {
      "title": "Milestone",
      "description": "A project milestone for a freelancer or client.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "progress": { "type": "number" },
        "dueDate": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "in-progress", "completed"] }
      }
    },
    "Conversation": {
      "title": "Conversation",
      "description": "A chat session between two users.",
      "type": "object",
      "properties": {
        "participants": { "type": "array", "items": { "type": "string" } },
        "lastMessage": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "Message": {
      "title": "Message",
      "description": "A single chat message.",
      "type": "object",
      "properties": {
        "senderId": { "type": "string" },
        "text": { "type": "string" },
        "translatedText": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password", "phone"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "#/entities/User",
      "description": "User profile documents indexed by Firebase Auth UID."
    },
    "/users/{userId}/stats/summary": {
      "schema": "#/entities/UserStats",
      "description": "Real-time stats for the user."
    },
    "/users/{userId}/milestones/{milestoneId}": {
      "schema": "#/entities/Milestone",
      "description": "Milestones associated with the user's active projects."
    },
    "/conversations/{conversationId}": {
      "schema": "#/entities/Conversation",
      "description": "Conversations between users."
    },
    "/conversations/{conversationId}/messages/{messageId}": {
      "schema": "#/entities/Message",
      "description": "Messages within a conversation."
    }
  }
}
